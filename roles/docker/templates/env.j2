GITLAB_PASSWORD={{ secrets.password }}
BIND_DN={{ secrets.bind_dn }}
GITLAB_HOST={{ hostvars["fedora"]['ansible_default_ipv4']['address'] }}
GITLAB_BASE=OU=Chercheurs,{{ secrets.base }}
GITLAB_ENCRYPTION=simple_tls
GITLAB_VOLUMES_DATA=./volumes/gitlab/data
GITLAB_VOLUMES_CONFIG=./volumes/gitlab/config
GITLAB_VOLUMES_LOGS=./volumes/gitlab/logs
GITLAB_VOLUMES_BACKUPS=./volumes/gitlab/backups
GITLAB_HOSTNAME=gitlab.{{ secrets.realm | lower }}
GITLAB_DOMAIN_NAME={{ secrets.realm | lower }}
GITLAB_VH=gitlab.{{ secrets.realm | lower }}
GITLAB_EXTERNAL_URL=http://gitlab.{{ secrets.realm | lower }}

DB_PASSWORD={{ secrets.password }}
DB_VOLUMES=./db/

NEXTCLOUD_ADMIN=admin
NEXTCLOUD_VH=nextcloud.{{ secrets.realm | lower }}
NEXTCLOUD_HOST=ldaps://{{ hostvars["fedora"]['hostname'] }}.{{ secrets.realm | lower }}
NEXTCLOUD_BASE={{ secrets.base }}
NEXTCLOUD_PASSWORD={{ secrets.password }}
NEXTCLOUD_VOLUMES=./nextcloud/

NGINX_PATH_CERTIFICATES=/home/{{ user_ansible }}/certificates

HOST=ldaps://{{ hostvars["fedora"]['hostname'] }}.{{ secrets.realm | lower }}
PASSWORD={{ secrets.password }}
JAVA_VH=java.{{ secrets.realm | lower }}
BASE={{ secrets.base }}
DOMAIN={{ secrets.realm | lower }}

JITSI_VH=jitsi.{{ secrets.realm | lower }}

# Directory where all configuration will be stored
CONFIG=~/.jitsi-meet-cfg

# Exposed HTTP port
HTTP_PORT=80

# Exposed HTTPS port
HTTPS_PORT=443

# System time zone
TZ=Europe/Brussels

# Public URL for the web service (required)
PUBLIC_URL=https://jitsi.{{ secrets.realm | lower }}

# Name your etherpad instance!
ETHERPAD_TITLE=Video Chat

# The default text of a pad
ETHERPAD_DEFAULT_PAD_TEXT="Welcome to Web Chat!\n\n"

# Name of the skin for etherpad
ETHERPAD_SKIN_NAME=colibris

# Skin variants for etherpad
ETHERPAD_SKIN_VARIANTS="super-light-toolbar super-light-editor light-background full-width-editor"

# Enable authentication
ENABLE_AUTH=1

# Enable guest access
ENABLE_GUESTS=0

# Select authentication type: internal, jwt, ldap or matrix
AUTH_TYPE=ldap

# LDAP url for connection
LDAP_URL=ldaps://{{ hostvars["fedora"]['hostname'] }}.{{ secrets.realm | lower }}

# LDAP base DN. Can be empty
LDAP_BASE={{ secrets.base }}

# LDAP user DN. Do not specify this parameter for the anonymous bind
LDAP_BINDDN={{ secrets.bind_dn }}

# LDAP user password. Do not specify this parameter for the anonymous bind
LDAP_BINDPW={{ secrets.password }}

LDAP_FILTER=(sAMAccountName=%u)

# LDAP authentication method
LDAP_AUTH_METHOD=bind

# LDAP version
LDAP_VERSION=3

# LDAP TLS using
LDAP_USE_TLS=1

# List of SSL/TLS ciphers to allow
LDAP_TLS_CIPHERS=SECURE256:SECURE128:!AES-128-CBC:!ARCFOUR-128:!CAMELLIA-128-CBC:!3DES-CBC:!CAMELLIA-128-CBC

# Require and verify server certificate
LDAP_TLS_CHECK_PEER=0

# XMPP password for Jicofo client connections
JICOFO_AUTH_PASSWORD={{ secrets.password }}

# XMPP password for JVB client connections
JVB_AUTH_PASSWORD={{ secrets.password }}

# XMPP password for Jigasi MUC client connections
JIGASI_XMPP_PASSWORD={{ secrets.password }}

# XMPP recorder password for Jibri client connections
JIBRI_RECORDER_PASSWORD={{ secrets.password }}

# XMPP password for Jibri client connections
JIBRI_XMPP_PASSWORD={{ secrets.password }}